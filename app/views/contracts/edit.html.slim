#contracts
  .container
    .py-2.text-center
      h2.heading.mb-3 Edit contract
  = react_component('Contracts/Form/Form', { \
      vendors: @vendors, \
      contract: @contract, \
      categories: @categories, \
      form_action: contract_path(@contract), \
      form_method: 'put', \
      csrf_token: form_authenticity_token, \
      submit_name: 'Update' \
    })